.pool-no-obj
  .no-obj-card
    width 304px
    height 408px
    margin 28px
    background rgba(255,255,255,0.85)
    border 1px solid #E0EFFF
    border-radius 4px
    text-align center
    p
      margin 0
    .no-obj-card__title
      height 100px
      margin-top 40px
      margin-bottom 20px
    .no-obj-card__title-text
      position absolute
      top 50%
      left 50%
      transform translate(-50%, -50%)
      font-size 16px
      opacity 0.65
    .no-obj-card__info
      line-height 22px
      margin-bottom 32px
    .no-obj-card__desc
      width 100%
      position absolute
      bottom 80px
      line-height 22px
    .no-obj-card__btn
      position absolute
      bottom 28px
      left 50%
      transform translate(-50%, 0)