.empty-content-button
  width 176px
  height 40px
  padding 0
  outline none
  background #fff
  border 1px solid #D5E6FF
  // border-left-color #0078FF
  border-radius 4px
  font-size 14px
  color rgba(0,0,0,0.65)
  text-align left
  line-height 40px
  vertical-align middle
  cursor pointer
  position relative
  span
    // opacity 0.85
    margin-left 10px
  // &--active
  &:hover
    color #0078FF
    span
      opacity 1
  &__icon
    display inline-block
    height 40px
    width 40px
    border-top-right-radius 15px 20px
    border-bottom-right-radius 15px 20px
    background-color rgba(213,230,255,0.2)
    img
      margin-top -2px
      margin-left 6px
  &::before
    content ''
    display block
    height 34px
    width 1px 
    // background #0078FF 
    background #7AADFF
    position absolute
    left -1px
    top 2px
    z-index 22
