  .logic-config

    .logic-config-content
      border 1px solid #e9e9e9
      display flex
      min-height 600px
      position relative

      .object-tree-action
        display flex
        align-items center
        padding-left 8px
        background-color #f0f2f4

    .tree
      border-right 1px solid #e9e9e9

      .tree-item
        height 32px
        line-height 32px
        padding-left 16px
        position relative
        cursor pointer
        
        .tree-action
          position absolute
          right 8px
          top 8px

      .tree-item-current 
        transition all .3s linear

      .tree-item-current:hover
        background rgba(0,120,255,0.1)

      .tree-item-disabled
        background #f5f5f5
        color rgba(0, 0, 0, 0.25)
      
      .tree-item-select
        background rgba(0,120,255,0.1)

    .logic-config-box
      flex 1
      padding 16px

      .logic-config-header
        display flex
        justify-content space-between
        margin-bottom 16px
      
    .logic-condition-box
      position relative
    
    .logic-condition-mask
      position absolute
      background #d9d9d9
      width 100%
      height 100%
      top 0
      left 0
      opacity 0.2
      border-radius 5px

.set-rule

  .bottom-button
    position absolute
    left 0
    bottom 0
    width 100%
    border-top 1px solid #e9e9e9
    padding 10px 16px
    background #fff
    text-align right