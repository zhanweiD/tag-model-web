/* d3图表 */
normalOpa = 0.1;
hoverOpa = 0.04;
activeOpa = 0.25;

.dag-box {
  position: relative;
  flex: auto;
  width: 100%;
  height: 100%;
  display flex
  flex-direction column
  overflow: hidden;
  .dag-zoom {
    width 100%
    height 32px
    font-size: 12px;
    .zoom-area {
      float: right;
      color: rgba(0,0,0,0.45);
      // border: 1px solid #d9d9d9;
      padding 0 10px
      i {
        display: inline-block;
        font-size: 16px;
        color: rgba(0,0,0,0.45);
        vertical-align: middle;
        cursor: pointer;
        &:hover {
          color: #009AF9;
        }
      }
      .hen{
        margin: 0 4px;
      }
    }
    .stateBox {
      float: left;
      font-size: 12px;
      .circle {
        margin-left: 15px;
        margin-right: 10px;
        display: inline-block;
        width: 8px;
        height: 8px;
        border-radius: 5px;
      }
      .green {
        background: rgba(62, 192, 77, 1);
      }
      .red {
        background: rgba(254, 66, 97, 1);
      }
      .blue {
        background: rgba(0, 169, 236, 1);
      }
      .yellow {
        background: rgba(255, 187, 0, 1);
      }
      .gray {
        background: rgba(188, 188, 188, 1)
      }
    }
  }
  .dag-svg {
    flex auto
    width 100%
  }
  .node rect {
    stroke: transparent;
    fill: #fff;
    stroke-width: 1.5px;
  }
  .node polygon {
    stroke: #CCCCCC;
    fill: #fff;
    stroke-width: 1.5px;
  }
  .edgePath path.path {
    stroke: #CCCCCC;
    fill: none;
    stroke-width: 1.5px;
  }
  marker {
    fill: #ccc;
  }
  /*hover-box*/
  .hover-box{
    // width: 330px;
    position: absolute;
    /*padding-top: 10px;*/
    background: transparent;
    top: 0;
    left: 0;
    z-index: 20;
    .hover-box-inner{
      padding: 8px 16px;
      border-radius: 4px;
      box-shadow: 0 2px 10px rgba(0, 0, 0, .3);
      background: #fff;
    }
    .name{
      font-size: 14px;
      color: rgba(0,0,0,.75);
      overflow: hidden;
      word-wrap: break-word;
      word-break: break-all;
      margin-bottom: 10px;
    }
    
    .filed-item {
      height: 35px
      line-height: 35px
      overflow: hidden
    }
    .box-item-label {
      // width: 80px;
      text-align: left;
      display: inline-block;
      margin-right 8px
    }
  }
  /*右键框*/
  .right-click-box{
    position: absolute;
    top: 0;
    left: 0;
    width: 100px;
    padding: 5px 0px;
    background: #fff;
    z-index: 30;
    border-radius: 4px;
    box-shadow: 0 2px 10px rgba(0, 0, 0, .3);

    ul, li
    {
      list-style none
      padding: 0 5px
      margin: 0
    }

    li{
      height: 32px;
      line-height: 32px;
      padding: 0 8px;
      cursor: pointer;
      &:hover{
        background:#F6F7F8;
      }
    }
  }
  .infoBox {
    position: absolute;
    right: 0px;
    bottom: 0px;
    width: 300px;
    background: rgba(0,0,0,.75);
    border-radius: 4px;
    padding: 10px 0 10px 20px;
    li {
      font-size: 12px;
      color: #ffffff;
      line-height: 25px;
      word-break: break-all;
    }
    .name {
      display: inline-block;
      vertical-align: middle;
      /*overflow: hidden;*/
      /*text-overflow: ellipsis;*/
      width: 200px;
      word-break: break-all;
    }
    &.infoBox-col-2 {
      width: 500px;
      display: flex;
      ul {
        flex: 1;
        padding-right: 10px;
      }
    }
  }
  .dag-divBox {
    width: 100%;
    height: 40px;
    background: #F2F2F2;
    text-align: center;
    padding: 0 10px;
    text-overflow: ellipsis;
    overflow: hidden;
    line-height: 40px;
    border-radius: 4px;
    color: rgba(0,0,0,.75);
    cursor: pointer;
    i.taskType {
      margin-right 5px
      vertical-align: middle
      height: 20px;
      width: 20px;
      display: inline-block;
    }
  }
  .dag-dependence {
    cursor: initial;
    display: flex;
    align-items: center;
    .dependence-content {
      flex: auto;
      text-align: center
    }
    i.icon-guanbi {
      display: none;
    }
  }
  .dag-dependence-del:hover {
    i.icon-guanbi {
      cursor: pointer;
      display: inline-block;
      margin-left: 5px;
    }
  }
  .green-bgc {
    background: rgba(62, 192, 77, normalOpa);
    border: 1px solid rgba(62, 192, 77, 0.9);
    &:hover {
      background: rgba(62, 192, 77, hoverOpa);
      border: 1px solid rgba(62, 192, 77, 1);
    }
  }
  .red-bgc {
    background: rgba(254, 66, 97, normalOpa);
    border: 1px solid rgba(254, 66, 97, 0.9);
    &:hover {
      background: rgba(254, 66, 97, hoverOpa);
      border: 1px solid rgba(254, 66, 97, 1);
    }
  }
  .yellow-bgc {
    background: rgba(255, 187, 0, normalOpa);
    border: 1px solid rgba(255, 187, 0, 0.9);
    &:hover {
      background: rgba(255, 187, 0, hoverOpa);
      border: 1px solid rgba(255, 187, 0, 1);
    }
  }
  .blue-bgc {
    background: rgba(0, 169, 236, normalOpa);
    border: 1px solid rgba(0, 169, 236, 0.9);
    &:hover {
      background: rgba(0, 169, 236, hoverOpa);
      border: 1px solid rgba(0, 169, 236, 1);
    }
  }
  .gray-bgc {
    background: rgba(153, 153, 153, normalOpa);
    border: 1px solid rgba(153, 153, 153, 0.9);
    &:hover {
      background: rgba(153, 153, 153, hoverOpa);
      border: 1px solid rgba(153, 153, 153, 1);
    }
  }

  .active {
    .dag-divBox {
      background: #009AF9;
      color: #fff;
    }
    .hasTaskType {
      color: rgba(0,0,0,.75);
      background: rgba(0, 169, 236, activeOpa);
    }
    .green-bgc {
      color: rgba(0,0,0,.75);
      background: rgba(62, 192, 77, activeOpa);
    }
    .red-bgc {
      color: rgba(0,0,0,.75);
      background: rgba(254, 66, 97, activeOpa);
    }
    .yellow-bgc {
      color: rgba(0,0,0,.75);
      background: rgba(255, 187, 0, activeOpa);
    }
    .blue-bgc {
      color: rgba(0,0,0,.75);
      background: rgba(0, 169, 236, activeOpa);
    }
    .gray-bgc {
      color: rgba(0,0,0,.75);
      background: rgba(188, 188, 188, activeOpa);
    }
  }

}
  