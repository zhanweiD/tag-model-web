.page-visual-detail
  // padding 16px
  height 100%

  .list-content
    margin 16px 
    // padding-top 16px 
    background #ffffff
    min-height calc(100vh - 230px) 

    .comp-tab
      margin-bottom 16px

  .config-info
    padding 8px 24px

    .info-title
      font-size 14px
      margin-bottom 16px
      position relative
      padding-left 12px

    .info-title:before 
      position absolute
      content ""
      height 14px
      width 3px
      left 0
      top 3px
      background #0078FF 

.condition-item-box1
  overflow-x auto
  min-width 1080px

  .logic-condition-mask
    min-width 1080px
    position absolute
    background #d9d9d9
    // width 100%
    height 100%
    top 0
    left 0
    opacity 0.2
    border-radius 5px

.logic-config-content1
  // border 1px solid #e9e9e9
  display flex
  height calc(100vh - 120px)
  position relative
  padding-bottom 50px

  // .condition-item-wrap
  //   border 1px solid #d9d9d9
  //   border-radius 5px
  //   overflow-x auto

  .condition-item-box
    min-width 1080px
    overflow-x auto

  .tree
    border 1px solid #e9e9e9
    // background rgba(0, 0, 0, 0.03)
    width 200px
    .tree-item
      width 200px
      height 32px
      line-height 32px
      padding-left 16px
      position relative
      cursor pointer
      
      .tree-action
        position absolute
        right 8px
        top 8px

    .tree-item-current 
      transition all .3s linear

    .tree-item-current:hover
      background rgba(0,120,255,0.1)

    .tree-item-select
      background rgba(0,120,255,0.1)

  .logic-config-box
    flex 1
    padding 16px
    overflow-y auto

  .logic-condition-box
    position relative
    padding-left 16px

  .logic-condition-mask
    min-width 1080px
    position absolute
    background #d9d9d9
    width 100%
    height 100%
    top -6px
    left 0
    opacity 0.2
    border-radius 5px
    